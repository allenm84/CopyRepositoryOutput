<Window x:Class="CopyRepositoryOutput.Windows.CroRunnerView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CopyRepositoryOutput.Windows"
        xmlns:lb="clr-namespace:CopyRepositoryOutput"
        mc:Ignorable="d"
        Title="Output" Height="500" Width="700" WindowStartupLocation="CenterScreen" WindowStyle="ToolWindow">
    <Grid Margin="10">
        <ListBox 
            ItemsSource="{Binding Output}" 
            lb:ListBoxBehavior.ScrollOnNewItem="true"
            FontFamily="Consolas" FontSize="13.333" 
            Background="Black" Foreground="White"/>
    </Grid>
</Window>
